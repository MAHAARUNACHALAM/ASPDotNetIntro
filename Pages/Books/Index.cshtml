@page
@model ASPDotNetIntro.Pages.IndexBookModel
@{
}

<br />
<h1>Books</h1>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                BOOK CODE
            </th>
            <th>
                BOOK TITLE
            </th>
            <th>
                AUTHOR
            </th>
            <th>
                PUBLICATION
            </th>
            <th>
                PRICE
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Books1 book in Model.booksList)
        {
            <tr>
                <td>
                    @book.BookCode
                </td>
                <td>
                    @book.BookTitle
                </td>
                <td>
                    @book.Author
                </td>
                <td>
                    @book.Publication
                </td>
                <td>
                    @book.Price
                </td>
            </tr>
        }
        
    </tbody>
</table>

